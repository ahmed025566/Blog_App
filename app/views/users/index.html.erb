<% if user_signed_in? %>
<div class="navBar">
  Logged in as <strong><%= current_user.email %></strong>
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= button_to("Log Out", destroy_user_session_path, method: :delete, class:('logout' )) %>
  </div>
<% else %>
<div class="navBar">
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
</div>
<% end %>
<div class = "userIndex">


  <% @users.each do |user| %>
   
    <a href="users/<%=user.id%>"><div class='userWraper'>
      <img src= <%= user.photo %> alt= "User" />  
      <div class='userInner'>
        <h1 class="name"><%= link_to user.name, user_path(user)%></h1>
        <p class='num'>Number of posts: <%= user.posts_counter || 0%></p>
      </div>
    </div></a>
  <% end %>
</div>
