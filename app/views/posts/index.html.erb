<div class = "userIndex">
  <div class='userWraper'>
  <img src= <%= @user.photo %> alt= "User" />   
   <div class='userInner'>
     <h1 class="name"><%= @user.name%></h1>
     <p class='num'>Number of posts: <%= @user.posts_counter || 0%></p>
   </div>
  </div>
  
  <% @posts.each do |post|%>
    <a href="/users/<%= @user.id%>/posts/<%= post.id %>" class="postDetails">
    <div class= "post">
     <p class= "title"> <%= post.title%> </p>
     <p class="text"> <%= post.text%> </p>
     <p class="counters">Comments: <%= post.comments_counter || 0%>, Likes: <%= post.likes_counter || 0%></p>
    </div>
    </a>
    <div class="comments">
    <% @comments.each do |comment|%>
      <% if comment.post_id == post.id%>
        <p>
        <% @users.each do |user|%>
          <% if user.id == comment.user_id %>
            <%= user.name %>:  <%= comment.text%>
          <% end %>
        <% end %>
        </p>
      <% end %> 
      <% end %>
    </div>
  <% end %>
</div>

 